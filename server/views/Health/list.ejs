<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Book Database-->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <a href="/healthlist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Record
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Day</th>
                    <th class="text-center col-2">Heart Rate</th>
                    <th class="text-center col-2">Blood Pressure</th>
                    <th class="text-center col-2">Blood Sugar</th>
                </tr>
                <% for(let count=0;count<HealthList.length;count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= HealthList[count].Day %></td>
                    <td class="text-center col-2"><%= HealthList[count].HeartRate %></td>
                    <td class="text-center col-2"><%= HealthList[count].BloodPressure %></td>
                    <td class="text-center col-2"><%= HealthList[count].BloodSugar %></td>
                    <td class="text-center col-1">
                        <a href="/healthlist/edit/<%= HealthList[count]._id%>"
                            class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i>Edit
                    </a>
                    </td>
                    <td class="text-center col-1">
                        <a href="/healthlist/delete/<%= HealthList[count]._id%>"
                            class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>Delete
                    </a>
                    </td>
                </tr>    
                    <%} %>
            </table>
        </div>
    </div>
</main>
<%- include ../Partials/footer.ejs%>